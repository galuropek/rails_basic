<h2>Passing the <%= @test_passage.test.title %> Test</h2>

<h3><%= @test_passage.current_question.body %></h3>
<small>Test passing progress: <%= question_number(@test_passage) %>/<%= @test_passage.test.questions.count %></small>
<%= form_for :answer, url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>
  <p><%= form.submit 'Next' %></p>
<% end %>
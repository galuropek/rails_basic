<%= form_for [:admin, @question, @answer] do |f| %>
  <%= render 'shared/errors', resource: @answer %>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, size: "70x5" %>
  </div>
  <div class="field">
    <%= f.label :correct %><br>
    <%= f.check_box :correct %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
